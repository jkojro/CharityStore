- if item == @current_item
  %tr.current_item
    %td
      = item.quantity
      ×
    %td= item.product.title
    %td.item_price= number_to_currency(item.total_price)
    %td.remove_item= button_to 'Usuń', item, method: :delete
- else
  %tr
    %td
      = item.quantity
      ×
    %td= item.product.title
    %td.item_price= number_to_currency(item.total_price)
    %td.remove_item= button_to 'Usuń', item, method: :delete, remote: true